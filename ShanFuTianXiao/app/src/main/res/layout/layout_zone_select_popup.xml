<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@mipmap/zone_background_right">
        <LinearLayout
            android:id="@+id/mine_alredycargo_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_alredycargo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发货"
                android:layout_toRightOf="@+id/im_01"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:textColor="#C2C6C9" />
        </LinearLayout>
        <View
            android:id="@+id/view_01"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C6C9"
            android:layout_below="@+id/mine_alredycargo_ll"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/mine_waitcargo_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view_01"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_waitcargo"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:layout_marginLeft="12dp"
                android:textColor="#C2C6C9"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:id="@+id/view_02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C6C9"
            android:layout_below="@+id/mine_waitcargo_ll"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:id="@+id/zone_dingdan_mingxi_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view_02"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zone_dingdan_mingxi"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单明细"
                android:textColor="#C2C6C9"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>