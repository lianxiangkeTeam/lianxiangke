<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <include
        android:id="@+id/query_income_top"
        layout="@layout/activity_toplayout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="@color/yellow_900"
        android:layout_marginTop="2dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/query_income_leiji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="累计收入 ："
                style="@style/white_textview"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/yellow_900">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_textview"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:text="时间"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_textview"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:text="收入金额"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/white_textview"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:text="收入来源"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
        <!--<RelativeLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--&gt;-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->

                <!--style="@style/white_textview"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="累计收入"/>-->
        <!--</RelativeLayout>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/query_income_listview_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <ListView
            android:id="@+id/query_icome_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </ListView>
    </LinearLayout>

</LinearLayout>
