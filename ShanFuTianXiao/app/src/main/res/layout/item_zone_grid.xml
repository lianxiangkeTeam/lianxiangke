<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_home_gridlayout"
    android:background="@color/common_fenge">
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/zone_grid_shop_iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/pci_zone_shop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zone_grid_shop_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPPOA57   3GB+32GB内存版   玫瑰金   全网通   4G   双卡双待"
            android:textSize="12dp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2张橙联享票+100元"
            android:textSize="12dp"
            android:textColor="#ff0000"
            android:id="@+id/zone_grid_lxp_tv" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/myticket_exchange_bg" />
            <TextView
                android:id="@+id/zone_shop_price_tv"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1599"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignLeft="@+id/zone_grid_lxp_tv"
            android:layout_alignStart="@+id/zone_grid_lxp_tv">
            <ImageView
                android:id="@+id/baiyou_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/baoyou_iv"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/text_1"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/zone_lxp_first_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已兑换："/>
            <TextView
                android:id="@+id/exchange_count_tv"
                android:layout_toRightOf="@+id/text_1"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200件"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>