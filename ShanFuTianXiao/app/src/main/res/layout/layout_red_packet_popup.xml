<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#20AFE7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/close_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/colse_white_new"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/red_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_red_packet"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/close_btn"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/red_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联享票红包奖励"
                android:textColor="@color/white"
                android:layout_below="@+id/red_logo_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/red_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:textColor="@color/white"
                android:textSize="45dp"
                android:layout_below="@+id/red_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"/>
            <Button
                android:id="@+id/get_redpacket_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/red_packet_btn"
                android:text="领取红包"
                android:layout_below="@+id/red_money_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>