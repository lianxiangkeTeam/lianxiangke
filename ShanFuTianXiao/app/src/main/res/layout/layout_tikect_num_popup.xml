<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/red_paket_bg">
        <ImageView
            android:id="@+id/black_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/red_paket_black_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/red_paket_lxk_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ticket_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥50元"
                android:textColor="#BC190E"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联享票奖励"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/red_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您获得"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/black_bg"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#F1F402"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/ticket_lxp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_text_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="50元红包+1张联享票"
            android:textColor="#F1F402"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/red_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_lxp_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="(票已转入我的联享票)"
            android:textColor="#F5EBCD"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/get_red_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/red_text_3"
            android:background="@mipmap/red_paket_btn_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="领取联享票"
            android:textColor="#BA920E"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>