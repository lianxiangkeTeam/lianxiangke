<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_fenge"
    android:orientation="vertical"
    tools:context="com.shanfu.tianxia.ui.RealNameFirstActivity">
    <include
        android:id="@+id/setting_top"
        layout="@layout/activity_toplaynewtop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请填写本人真实信息"
        android:textSize="12dp"
        android:background="@color/common_fenge"
        android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:padding="15dp"
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/phone_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="请输入手机号"
            android:textSize="14dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_fenge"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:padding="15dp"
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/code_ed"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_2"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="number"
            android:hint="请输入六位验证密码"
            android:textSize="14dp"/>

        <RelativeLayout
            android:id="@+id/code_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/withdrawal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/code_send_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                style="@style/Gainsboro_textview"
                android:textSize="12dp"
                android:textColor="@color/common_blue"
                android:text="获取验证码"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/wallet_money_mm_btn_blue"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="下一步"
        android:textColor="@color/white"/>

</LinearLayout>
