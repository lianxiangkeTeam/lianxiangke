<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/select_shop_iv"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/default_image"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/select_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:maxEms="6"
                    android:ellipsize="end"
                    style="@style/black_textview"
                    android:text="贤二素食餐厅"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/select_shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/red_textview"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"

                    />
               <!-- <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/select_shop_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/red_textview"
                        android:text="10.1km"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/arrow_rig"/>
                </LinearLayout>-->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/select_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="本二诺叵右"
                    android:maxEms="10"
                    android:ellipsize="end"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

            <!--    <RatingBar
                    android:id="@+id/select_shop_star"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_alignParentLeft="true"
                    android:isIndicator="true"
                    android:progressDrawable="@drawable/star_full" />-->
                <com.shanfu.tianxia.view.MyRatingBar
                    android:id="@+id/select_shop_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:starmyCount="5"
                    app:starmyEmpty="@drawable/star_empty"
                    app:starmyFill="@drawable/star_full"
                    app:starImageSize="15dp"
                    app:starPadding="5dp"

                    ></com.shanfu.tianxia.view.MyRatingBar>
                <ImageView
                    android:id="@+id/select_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iphone_select"

                    />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>





</LinearLayout>