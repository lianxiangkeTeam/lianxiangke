<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/lxp_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2张红联想票+3张绿联想票"
                    android:textColor="#DB2C2E"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="120dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_fenge"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:paddingTop="28dp"
                    android:paddingLeft="24dp"
                    android:paddingBottom="28dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/minus_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@mipmap/myticket_remove_bg" />
                        <TextView
                            android:id="@+id/count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:paddingLeft="21dp"
                            android:paddingRight="21dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/Gainsboro"
                            android:textSize="18dp"/>
                        <Button
                            android:id="@+id/add_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@mipmap/myticket_add_amount_tv" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/query_tv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="确 定"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:background="@mipmap/myticket_exchange_amount_btn"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/shop_pic_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/pci_zone_shop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>


</LinearLayout>