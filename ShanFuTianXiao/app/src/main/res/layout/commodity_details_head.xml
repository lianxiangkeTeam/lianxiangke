<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/details_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />



        <!-- aaaaaa-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/details_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/black_textview"

                    />
                <com.shanfu.tianxia.view.MyRatingBar
                    android:id="@+id/shop_title_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:starmyCount="5"
                    app:starmyEmpty="@drawable/star_empty"
                    app:starmyFill="@drawable/star_full"
                    app:starImageSize="15dp"
                    app:starPadding="5dp"
                    app:starStep="0"
                    ></com.shanfu.tianxia.view.MyRatingBar>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/call_phone"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/call_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/content_con_icon_phone"/>
            </RelativeLayout>

        </LinearLayout>
        <!-- aaaaaa-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
        <!-- 第三行 商户定位 -->
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/content_con_icon_coord"/>
            <TextView
                android:id="@+id/shop_address"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                style="@style/Gainsboro_textview"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@mipmap/content_con_icon_next"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
             <!--   <RatingBar
                    android:id="@+id/shop_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:progressDrawable="@drawable/star_full"
                    android:rating="4"/>-->
                <com.shanfu.tianxia.view.MyRatingBar
                    android:id="@+id/shop_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:starmyCount="5"
                    app:starmyEmpty="@drawable/star_empty"
                    app:starmyFill="@drawable/star_full"
                    app:starImageSize="15dp"
                    app:starPadding="5dp"
                    app:starStep="1"
                    ></com.shanfu.tianxia.view.MyRatingBar>
                <TextView
                    android:id="@+id/details_fraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    style="@style/black_textview" />
            </LinearLayout>
            <TextView
                android:id="@+id/number_of_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/red_textview"
                android:text="评价商家"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/enviroonment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/red_textview"
                android:textSize="12sp"
                android:text="环境不错(0)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/waiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/red_textview"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="服务态度好(0)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/red_textview"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="价格实惠(0)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/red_textview"
                android:textSize="12sp"
                android:text="味道不错(0)"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>